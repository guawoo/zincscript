<?xml version="1.0" encoding="UTF-8"?>
<unit>
    <div>
        <!-- 此处的item响应oninit事件接口，调用copy方法 -->
        <!-- 不带参数的copy方法拷贝当前组件信息；copy方法有1个重载的方法，允许带一个参数，该参数是要拷贝组件的id -->
        <commentitem id="header" oninit="copy()"/>
    </div>
    
    <!-- list会响应onload事件，调用 getComment 方法，联网获取回复的评论-->
    <list id="replies" onload="getComment">
        <listitem id="floor1" src="头像url" body="评论内容" rtail="于鑫 5分钟前"/>
        <listitem id="floor2" src="头像url" body="评论内容" rtail="于鑫 5分钟前"/>
        <listitem id="floor3" src="头像url" body="评论内容" rtail="于鑫 5分钟前"/>
    </list>
</unit>